.yr-ui-notice__bar {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  flex-direction: row;
  align-items: center;
}

.yr-ui-notice__shrink {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.yr-ui-notice__wrap {
  flex: 1;
  flex-direction: column;
  overflow: hidden;
}

.yr-ui-notice__wrap-scroll {
  flex-direction: row;
}

.yr-ui-notice__wrap-scroll {
  position: relative;
}
.yr-ui-notice__content {
  flex: 1;
  display: block;
  overflow: hidden;
}

.yr-ui-notice__text {
  word-break: break-all;
}

.yr-ui-notice__content-single {
  display: flex;
  flex: none;
  width: 100%;
  justify-content: center;
}

.yr-ui-notice__single {
  display: block;
  width: 100%;
  white-space: nowrap;
  flex-direction: row;
  overflow: hidden;
  text-overflow: ellipsis;
}

.yr-ui-notice__scrollable {
  position: absolute;
  display: block;
  white-space: nowrap;
  padding-left: 101%;
  animation: notice_ani 10s 0s linear infinite both;
  animation-play-state: paused;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  perspective: 1000;
  -webkit-perspective: 1000;
}

@keyframes notice_ani {
  100% {
    transform: translate3d(-100%, 0, 0);
  }
}

.yr-ui-notice__text-color {
  color: var(--yr-ui-color-danger, #FF2B2B) !important;
}