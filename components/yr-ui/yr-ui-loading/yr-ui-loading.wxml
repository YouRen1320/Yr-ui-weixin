<view class="{{isMask && isFixed?'yr-ui-loading__mask':''}}" style="background:{{isFixed?maskBgColor:'transparent'}};">
  <view class="yr-ui-loading yr-ui-loading__wrap {{isFixed?'yr-ui-loading__fixed':''}}" style="background: {{backgroundColor}};position:{{isFixed?'fixed':'static'}}" wx:if="{{type === 'col'}}">
    <image class="yr-ui-loading__ani" src="{{srcCol}}"></image>
    <text class="yr-ui-loading__text" style="color:{{colColor}};font-size:{{size}}rpx;line-height:{{size}}rpx">{{ text }}</text>
  </view>
  <view wx:else class="yr-ui-loading yr-ui-loading__row {{isFixed?'yr-ui-loading__fixed':''}}" style="position:{{isFixed?'fixed':'static'}}">
    <image class="yr-ui-loading-row__ani" src="{{srcRow}}"></image>
    <text class="yr-ui-loading__text" style="color:{{rowColor}};font-size:{{size}}rpx;line-height:{{size}}rpx">{{ text }}</text>
  </view>
</view>