<wxs src="./index.wxs" module="handler"></wxs>
<view class="yr-ui-horizontal__scroll" style="margin-top:{{marginTop}}rpx;margin-bottom:{{marginBottom}}rpx">
		<scroll-view 	show-scrollbar="{{false}}" scroll-x upper-threshold="{{0}}" lower-threshold="{{0}}" data-width="{{width}}" data-bgwidth="{{bgWidth}}"	data-blockwidth="{{blockWidth}}" bindscroll="{{handler.scroll}}" bindscrolltoupper="{{handler.scrolltoupper}}" bindscrolltolower="{{handler.scrolltolower}}" class="yr-ui-hor__scroll-view">
			<view class="yr-ui-hor__scroll-wrap">
				<slot></slot>
			</view>
		</scroll-view>
		<view class="yr-ui-hor__scrollbar-wrap" style="margin-top:{{scrollGap}}rpx" wx:if="{{scroll}}">
			<view class="yr-ui-hor__scrollbar {{scrollCap==='round'?'yr-ui-hor__scroll-radius':''}}" style="height:{{blockHeight}}px;width:{{bgWidth}}px;background:{{background}}">
				<view class="yr-ui-hor__scroll-indicator {{scrollCap==='round'?'yr-ui-hor__scroll-radius':''}} {{!scrollBarColor?'yr-ui-hor__scroll-bg':''}}" style="height:{{blockHeight}}px;width:{{blockWidth}}px;background:{{scrollBarColor}}"></view>
			</view>
		</view>
	</view>