.yr-ui-horizontal__scroll,
.yr-ui-hor__scroll-view,
.yr-ui-hor__scroll-wrap {
  display: flex;
  flex-shrink: 0;
  flex-direction: row;
}

.yr-ui-horizontal__scroll {
  flex-direction: column;
  align-items: stretch;
  align-content: flex-start;
}

.yr-ui-hor__scrollbar-wrap {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.yr-ui-hor__scrollbar {
  position: relative;
  overflow: hidden;
  transform: translateZ(0);

}

.yr-ui-hor__scroll-radius {
  border-radius: 100px;
}

.yr-ui-hor__scroll-indicator {
  position: absolute;
  left: 0;
  top: 0;
  transition: all 0.1s linear;
}

.yr-ui-hor__scroll-bg {
  background-color: var(--yr-ui-color-primary, #465CFF) !important;
}