<view class="yr-ui-digital__keyboard-wrap {{show?'yr-ui-digital__keyboard__ani':''}} {{theme==='light'?'yr-ui-dk__theme-light':''}} {{theme==='dark'?'yr-ui-dk__theme-dark':''}}" style="z-index:{{zIndex}}">
  <slot></slot>
  <view class="yr-ui-digital__keyboard-grids">
    <view class="yr-ui-digital__keyboard-left">
      <view class="yr-ui-dk__left-wrap" wx:for="{{items}}" wx:key="index">
        <view class="yr-ui-dk__grid-left" wx:for="{{item.keys}}" wx:key="idx" wx:for-item="val" wx:for-index="idx">
          <text style="font-size:{{index===3 && idx===0? spareSize:40}}rpx" class="yr-ui-digital__keyboard-key {{theme==='dark'?'yr-ui-dk__key-dark':''}} {{theme==='dark' && val?'yr-ui-dk__highlight-dark':''}} {{theme==='light' && val?'yr-ui-dk__highlight':''}}" catchtap="keyClick" data-index="{{index}}" data-idx="{{idx}}" data-val="{{val}}">{{val}}</text>
        </view>
      </view>
    </view>
    <view class="yr-ui-digital__keyboard-right">
      <view class="yr-ui-dk__grid-right">
        <view class="yr-ui-digital__keyboard-key yr-ui-dk__highlight {{theme==='dark'?'yr-ui-dk__key-dark':''}} {{theme==='dark'?'yr-ui-dk__highlight-dark':''}}" catchtap="backspace">
          <yr-ui-icon name="{{name}}" size="{{56}}" color="{{theme==='dark'?'#d1d1d1':'#333'}}"></yr-ui-icon>
        </view>
      </view>
      <view class="yr-ui-dk__button-wrap">
        <view class="yr-ui-dk__button {{!background?'yr-ui-dk__button-color':''}} {{disabled?'yr-ui-dk__btn-disabled':''}}" style="background:{{background}}">
          <text class="yr-ui-dk__button-text" style="color:{{color}};font-size:{{size}}rpx;font-weight:{{fontWeight}}">{{text}}</text>
          <view class="yr-ui-dk__button-ck {{!disabled?'yr-ui-dk__highlight':''}}" catchtap="confirm">
          </view>
        </view>
      </view>
    </view>
  </view>
</view>