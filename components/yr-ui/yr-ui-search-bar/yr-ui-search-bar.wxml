<view class="yr-ui-search__bar-wrap {{background?'':'yr-ui-searchbar__wrap-bg'}}" style="background: {{background}}; padding-top: {{paddingTb}}rpx;padding-bottom:{{paddingTb}}rpx;padding-left:{{paddingLr}}rpx;padding-right:{{paddingLr}}rpx">
  <slot></slot>
  <view class="yr-ui-search__bar-form" style="height:{{height}}rpx">
    <view class="yr-ui-search__bar-box" style="height:{{height}}rpx;border-radius: {{radius}}rpx; background:{{inputBackground}}" wx:if="{{showInput}}">
      <view class="yr-ui-search__bar-icon">
        <view class="yr-ui-sbi__circle"></view>
        <view class="yr-ui-sbi__line"></view>
      </view>
      <input class="yr-ui-search__bar-input {{color?'':'yr-ui-sb__input-color'}}" style="color:{{color}};height: {{height}}rpx" placeholder-class="yr-ui-search__bar-pl" placeholder="{{plholder && plholder!==true?plholder:''}}" value="{{val}}" focus="{{isFocus}}" disabled="{{disabled}}" confirm-type="search" bindblur="inputBlur" bindfocus="inputFocus" bindinput="inputChange" bindconfirm="search" />
      <view class="yr-ui-sbi__clear-wrap" wx:if="{{val.length > 0 && !disabled}}" catchtap="clearInput">
        <view class="yr-ui-sbi__clear">
          <view class="yr-ui-sbi__clear-a"></view>
        </view>
        <view class="yr-ui-sbi__clear">
          <view class="yr-ui-sbi__clear-b"></view>
        </view>
      </view>
    </view>
    <view class="yr-ui-search__bar-label {{isLeft?'yr-ui-sb__label-left':'yr-ui-sb__label-center'}}" style="border-radius: {{radius}}rpx; background:{{inputBackground}}" wx:if="{{!isFocus && !isSearch && showLabel}}" bindtap="onShowInput">
      <view class="yr-ui-search__bar-icon">
        <view class="yr-ui-sbi__circle"></view>
        <view class="yr-ui-sbi__line"></view>
      </view>
      <text class="yr-ui-search__bar-text">{{ placeholder }}</text>
    </view>
  </view>
  <text wx:if="{{cancel && isSearch && !val && cancelText && cancelText!=='true' && cancelText!==true}}" class="yr-ui-search__bar-btn" style=" color:{{cancelColor}}" bindtap="hideInput">{{ cancelText }}</text>
  <text wx:if="{{val && !disabled && isSearch && searchText && searchText!=='true' && searchText!==true}}" class="yr-ui-search__bar-btn {{searchColor?'':'yr-ui-sb__btn-color'}}" style="color:{{searchColor}}" bindtap="search">{{ searchText }}</text>
</view>