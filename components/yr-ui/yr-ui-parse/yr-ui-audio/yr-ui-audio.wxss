.fuiAudio-wrap {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  height: 240rpx;
  border: 1rpx solid #ebe9ec;
  background: #fdfbfe;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
}

.fuiAudio-left {
  margin-right: 30rpx;
}

.fuiAudio-right {
  flex: 1;
}

.fuiAudio-icon {
  width: 100rpx;
  height: 100rpx;
}

.fuiAudio-title {
  margin-bottom: 16rpx;
  font-size: 40rpx;
  color: #323232;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
}

.fuiAudio-progress {
  width: 100%;
  height: 6rpx;
  background: #ebe9ec;
  border-radius: 4rpx;
  margin-bottom: 10rpx;
}

.fuiAudio-author {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #999;
}

.fuiAudio-time {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  color: #999;
}

.fuiAudio-progress {
  position: relative;
}

.fuiAudio-current {
  position: absolute;
  left: 0;
  top: 0;
  width: 10%;
  height: 100%;
  background: #249b27;
}

.fuiAudio-hidden {
  opacity: 0;
  visibility: hidden;
  transform: scale(0);
  position: absolute;
}