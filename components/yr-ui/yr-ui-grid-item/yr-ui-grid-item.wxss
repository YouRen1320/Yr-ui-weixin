.yr-ui-grid__item {
  height: 100%;
  display: flex;
  box-sizing: border-box;
  flex-shrink: 0;
}

.yr-ui-grid__item-box {
  display: flex;
  width: 100%;
  position: relative;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
}

.yr-ui-grid__item-border {
  position: relative;
  z-index: 0;
  border-bottom: 0;
  border-right: 0;
}

.yr-ui-grid__item-border::before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-right: 1px solid var(--yr-ui-color-border, #EEEEEE);
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.yr-ui-grid__item-border::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid var(--yr-ui-color-border, #EEEEEE);
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.yr-ui-highlight:active {
  background-color: var(--yr-ui-color-hover, rgba(0, 0, 0, 0.2)) !important;
}

.yr-ui-grid__item-hidden {
  opacity: 0;
  visibility: hidden;
}