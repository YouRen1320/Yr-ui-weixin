.yr-ui-license__plate-wrap {
  width: 100%;
  visibility: hidden;
  transform: translate3d(0, 100%, 0);
  transition-property: transform, visibility;
  transition-duration: .25s;
  transition-timing-function: ease-in-out;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  transform-origin: center center;
  overflow: hidden;
}

.yr-ui-lp__theme-light {
  background: #F1F4FA;
}

.yr-ui-lp__theme-dark {
  background: #1B1B1B;
}

.yr-ui-license__plate-wrap::before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  -webkit-transform: scaleY(0.5) translateZ(0);
  transform: scaleY(0.5) translateZ(0);
  transform-origin: 0 0;
  z-index: 2;
  pointer-events: none;
}

.yr-ui-lp__theme-light::before {
  border-top: 1px solid rgba(51, 51, 51, .1);
}

.yr-ui-lp__theme-dark::before {
  border-top: 1px solid #333;
}

.yr-ui-license__plate__ani {
  transform: translate3d(0, 0, 0);
  visibility: visible;
}

.yr-ui-license__plate-grids {
  width: 100%;
  box-sizing: border-box;
  flex: 1;
  padding-top: 24rpx;
}

.yr-ui-lp__grid-wrap {
  width: 100%;
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.yr-ui-lp__grid {
  width: 75rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  padding-left: 7rpx;
  padding-right: 7rpx;
  padding-bottom: 24rpx;
  overflow: hidden;
  opacity: 1;
}

.yr-ui-lp__grid-lg {
  width: 112rpx;
}

.yr-ui-lp__grid-hidden {
  width: 0;
  padding-left: 0;
  padding-right: 0;
  opacity: 0;
}

.yr-ui-license__plate-key {
  width: 100%;
  display: flex;
  flex-shrink: 0;
  box-sizing: border-box;
  flex: 1;
  font-weight: 500;
  height: 88rpx;
  background: #fff;
  border-radius: 8rpx;
  align-items: center;
  justify-content: center;
  color: #181818;
  text-align: center;
  position: relative;
}

.yr-ui-license__plate-key::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border-bottom: 1px solid #B2B2B2;
  z-index: 2;
  pointer-events: none;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.yr-ui-lp__key-dark::after {
  border-bottom: 1px solid #4c4c4c !important;
}

.yr-ui-lp__key-dark {
  background: #222;
  color: #D1D1D1;
}

.yr-ui-lp__highlight:active {
  background: rgba(0, 0, 0, .2);
}

.yr-ui-lp__highlight-dark:active {
  background: #333 !important;
}

.yr-ui-lp__btn-wrap {
  flex: 1;
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding: 24rpx 0;

}

.yr-ui-lp__btnwrap-light {
  background-color: #F8F8F8;
}

.yr-ui-lp__btnwrap-dark {
  background-color: #333;
}

.yr-ui-lp__button {
  padding: 0 32rpx;
}

.yr-ui-lp__button:active {
  opacity: .5;
}

.yr-ui-lp__button-color {
  color: var(--yr-ui-color-primary, #465CFF) !important;
}