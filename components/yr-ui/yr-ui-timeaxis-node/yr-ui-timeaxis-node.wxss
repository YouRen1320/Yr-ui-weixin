.yr-ui-timeaxis__node-wrap {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.yr-ui-timeaxis__line {
  width: 1px;
  transform: scaleX(.5) translateZ(0);
  transform-origin: center center;
  flex: 1;
}

.yr-ui-timeaxis__node-box {
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.yr-ui-timeaxis__node {
  display: flex;
  align-items: center;
  justify-content: center;
}

.yr-ui-timeaxis__left {
  flex-shrink: 0;
  overflow: hidden;
}

.yr-ui-timeaxis__content {
  width: 100%;
  flex: 1;
}