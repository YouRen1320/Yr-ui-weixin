<view class="yr-ui-segmented__control {{disabled?'yr-ui-segmented__disabled':''}}" style="margin-top:{{marginTop}}rpx;margin-bottom:{{marginBottom}}rpx">
  <view class="yr-ui-segmented__item {{index===0 && type==='button'?'yr-ui-segmented__first':''}} {{currentIndex===index && !color && type==='button'?'yr-ui-seg__item-bg':''}} {{!color && type==='button'?'yr-ui-seg__item-border':''}} {{type==='button'?'yr-ui-segmented__item-border':''}}" wx:for="{{vals}}" wx:key="index" style="border-top-left-radius:{{index===0?radius+'rpx':'0'}};border-bottom-left-radius:{{index===0?radius+'rpx':'0'}};border-top-right-radius:{{index===values.length - 1?radius+'rpx':'0'}};border-bottom-right-radius:{{index===values.length - 1?radius+'rpx':'0'}};border-color:{{type==='button'?color:'transparent'}};background:{{currentIndex===index && type==='button'?color:'transparent'}};height:{{height}}rpx" bindtap="handleClick" data-index="{{index}}">
    <text style="font-size:{{size}}rpx;color:{{currentIndex===index?activeColor:color}};font-weight:{{bold && currentIndex===index ?600:400}}" class="{{item[disabledKey]?'yr-ui-segmented__disabled':''}} {{!color && currentIndex!==index?'yr-ui-seg__text-color':''}}">{{item[nameKey]}}</text>
    <view class="yr-ui-segmented__item-line" wx:if="{{currentIndex===index && type==='text'}}" style="background:{{activeColor}}"></view>
  </view>
</view>