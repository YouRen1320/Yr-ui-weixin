<view class="yr-ui-switch__input" style="zoom:{{scaleRatio}}">
  <view class="yr-ui-switch__input-def {{disabled?'yr-ui-checkbox__disabled':''}} {{val && !color?'yr-ui-switch__color':''}}" style="background:{{val?color:'#dfdfdf'}};border-color:{{val?color:borderColor}}" wx:if="{{type==='switch'}}">
    <view class="yr-ui-switch__input-before {{val?'yr-ui-switch__input--checked':''}}" style="background:{{background}}"></view>
    <view class="yr-ui-switch__input-after {{val?'yr-ui-switch__input--after':''}}" style="background:{{val?(btnColor?btnColor:btnBgColor):btnBgColor}}">
      <slot></slot>
    </view>
    <switch class="yr-ui-switch__hidden" bindchange="change" name="{{name}}" checked="{{val}}" disabled="{{disabled}}" color="{{color}}">
    </switch>
  </view>
  <view class="yr-ui-checkbox__self {{disabled?'yr-ui-checkbox__disabled':''}} {{!color && val?'yr-ui-switch__color':''}}" style="background:{{val?color:'#fff'}};border:1px solid {{val?color:borderColor}}" wx:else>
    <view class="yr-ui-check__mark" style="border-bottom-color:{{checkMarkColor}};border-right-color:{{checkMarkColor}}" wx:if="{{val}}"></view>
    <switch class="yr-ui-switch__hidden" bindchange="change" name="{{name}}" type="checkbox" checked="{{val}}" disabled="{{disabled}}"></switch>
  </view>
</view>