<view class="yr-ui-index__list-item {{subRight?'yr-ui-il__between':''}}">
  <view class="yr-ui-index__list-left">
    <view class="yr-ui-il__checkbox {{(!selectedColor || selectedColor=='true') && model.checked?'yr-ui-il__checkbox-color':''}}" style="background:{{model.checked?selectedColor:'#fff'}};border-color:{{model.checked?selectedColor:borderColor}}" wx:if="{{isSelect}}">
      <view class="yr-ui-il__checkmark" wx:if="{{model.checked}}"></view>
    </view>
    <view class="yr-ui-il__img-box" wx:if="{{isSrc}}">
      <image wx:if="{{model.src}}" src="{{model.src}}" class="yr-ui-index__list-img" mode="widthFix"></image>
    </view>
    <text class="yr-ui-index__list-main">{{model.text || ''}}</text>
  </view>
  <text class="yr-ui-index__list-sub">{{model.subText || ''}}</text>
  <view class="yr-ui-il__border-bottom" wx:if="{{!last}}"></view>
</view>