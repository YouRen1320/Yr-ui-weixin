<view>
  <view class="yr-ui-share__sheet-mask {{show?'yr-ui-ss__mask-show':''}}" style="{{parse.getStyle(maskBackground, zIndex)}}" catchtap="maskClick">
  </view>
  <view class="yr-ui-share__sheet-wrap {{radius?'yr-ui-share__sheet-radius':''}} {{show?'yr-ui-share__sheet-show':''}}" style="z-index:{{zIndex}};background:{{background}}">
    <slot></slot>
    <text wx:if="{{!titleSlot}}" class="yr-ui-share__sheet-title" style="font-size:{{size}}rpx;color:{{color}}">{{!title || title==='true' || title===true?'':title}}</text>
    <view class="yr-ui-share__sheet-box" wx:for="{{items}}" wx:key="index">
      <scroll-view scroll-x class="yr-ui-share__sheet-scroll">
        <view class="yr-ui-share__sheet-list {{isFull?'yr-ui-share__sheet-full':''}}" style="padding-left:{{padding}}rpx;padding-right:{{padding}}rpx">
          <view class="yr-ui-share__sheet-item" catchtap="handleClick" data-index="{{index}}" data-idx="{{idx}}" wx:for="{{item.data}}" wx:for-item="obj" wx:for-index="idx" wx:key="idx">
            <view class="yr-ui-share__sheet-icon" style="background:{{obj.background || itemBackground}};width:{{width}}rpx;height:{{width}}rpx">
              <yr-ui-icon name="{{obj.name}}" size="{{obj.size || 120}}" color="{{obj.color || '#181818'}}" wx:if="{{obj.name}}"></yr-ui-icon>
              <image class="yr-ui-share__sheet-img" style="width:{{obj.width || 96}}rpx;height:{{obj.width || 96}}rpx" src="{{obj.src}}" mode="widthFix" wx:if="{{obj.src}}"></image>
            </view>
            <text class="yr-ui-share__sheet-text" style="font-size:{{obj.textSize || 24}}rpx;color:{{obj.textColor || '#7f7f7f'}}">{{obj.text}}</text>
            <button class="yr-ui-sharesheet__btn" wx:if="{{obj.openType}}" open-type="{{obj.openType}}" app-parameter="{{obj.appParameter}}" bindopensetting="bindopensetting" bindlaunchapp="bindlaunchapp"></button>
          </view>
        </view>
      </scroll-view>
    </view>
    <view class="yr-ui-share__sheet-button" style="background:{{btnBackground}}">
      <text class="yr-ui-share__sheet-btn" style="font-size:{{btnSize}}rpx;color:{{btnColor}}" catchtap="cancel">{{btnText}}</text>
      <view class="yr-ui-ss__btn-line" style="background:{{lineColor}}"></view>
    </view>
  </view>
</view>

<wxs module="parse">
  module.exports = {
    getStyle: function (maskBackground, zIndex) {
      return "background:" + maskBackground + ";z-index:" + (parseInt(zIndex) - 10)
    }
  }
</wxs>