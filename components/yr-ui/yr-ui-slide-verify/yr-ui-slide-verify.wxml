<wxs src="./index.wxs" module="parse"></wxs>
<view class="yr-ui-slideverify__wrap" style="width:{{totalWidth}}px;height:{{height}}rpx;background:{{background}}">
		<text class="yr-ui-sv__text-tip {{isPass?'yr-ui-sv__opacity':''}}" style="font-size:{{size}}rpx;background:-webkit-gradient(linear, left top, right top, color-stop(0, {{color}}), color-stop(.4, {{color}}), color-stop(.5, white), color-stop(.6, {{color}}), color-stop(1, {{color}}));color:{{color}}">拖动滑块至虚线框内</text>
		<view class="yr-ui-sv__foreground {{!activeBgColor?'yr-ui-sv__background':''}}" id="foreground"
			style="background:{{activeBgColor}}">
				<text class="yr-ui-sv__text-res {{!isPass?'yr-ui-sv__opacity':''}}"
					style="font-size:{{size}}rpx;color:{{activeColor}}">验证通过</text>
				<text class="yr-ui-sv__text-cover {{isPass?'yr-ui-sv__opacity':''}}"
					style="width:{{totalWidth}}px;font-size:{{size}}rpx;height:{{height}}rpx;line-height:{{height}}rpx;color:{{activeColor}}">拖动滑块至虚线框内</text>
			</view>
			<view class="yr-ui-sv__slider {{!passColor && isPass?'yr-ui-sv__border-color':''}}" style="width:{{sliderW}}px;border-color:{{isPass?passColor: borderColor}}" change:prop="{{parse.slidereset}}"
				prop="{{resetNum}}" data-width="{{totalWidth}}" data-tleft="{{targetWidth}}" data-swidth="{{sliderW}}"
				data-pass="{{isPass?1:0}}" data-range="{{range}}" bindtouchstart="{{parse.touchstart}}" catchtouchmove="{{parse.touchmove}}"
				bindtouchend="{{parse.touchend}}">
				<yr-ui-icon name="right" color="{{arrowColor}}" size="{{iconSize}}" wx:if="{{!isPass}}"></yr-ui-icon>
				<yr-ui-icon name="checkbox-fill" color="{{passColor}}" primary size="{{iconSize}}" wx:else></yr-ui-icon>
      </view>
			<view class="yr-ui-sv__dotted-box"
				style="border-color:{{lineColor}};border-width:{{isPass?0:'1px'}};width:{{sliderW}}px;left:{{targetWidth-sliderW}}px">
			</view>
		</view>