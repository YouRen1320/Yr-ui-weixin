<view class="yr-ui-radio__input {{disabled?'yr-ui-radio__disabled':''}} {{!color && val && (!isCheckMark || styleType==2)?'yr-ui-radio__color':''}} {{!color && val && !isCheckMark && styleType==1?'yr-ui-radio__active-bgcolor':''}}" style="background:{{parse.getBackgroundColor(val,isCheckMark,color,styleType)}};border-color:{{parse.getBorderColor(val,isCheckMark, color, borderColor,styleType)}};zoom:{{scaleRatio}};border-radius:{{borderRadius}}" catchtap="radioChange">
  <view class="yr-ui-check__mark" style="border-bottom-color:{{checkMarkColor}};border-right-color:{{checkMarkColor}}" wx:if="{{val && styleType==1}}"></view>
  <view class="yr-ui-check__mark-circle {{dotColor=='' || dotColor===true?'yr-ui-radio__active-bgcolor':''}}" style="background:{{dotColor}}" wx:if="{{val && styleType==2}}">
  </view>
  <radio class="yr-ui-radio__hidden" color="{{color}}" disabled="{{disabled}}" value="{{value}}" checked="{{val}}"></radio>
</view>

<wxs module="parse">
  module.exports = {
    getBackgroundColor: function (val, isCheckMark, color, styleType) {
      var _color = val && styleType == 1 ? color : '#fff'
      if (isCheckMark && styleType == 1) {
        _color = 'transparent'
      }
      return _color;
    },
    getBorderColor: function (val, isCheckMark, color, borderColor, styleType) {
      var _color = val ? color : borderColor;
      if (isCheckMark && styleType == 1) {
        _color = 'transparent'
      }
      return _color;
    }
  }
</wxs>