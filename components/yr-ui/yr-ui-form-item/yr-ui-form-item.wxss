.yr-ui-form__item-wrap,
.yr-ui-form__item-outer {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.yr-ui-form__item-outer{
  padding-left: 0 !important;
  padding-right: 0 !important;
}
.yr-ui-form__wrap-inner {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding-top: 0 !important;
  padding-bottom: 0 !important;
}

.yr-ui-form__highlight:active {
  background-color: var(--yr-ui-bg-color-hover, rgba(0, 0, 0, 0.2)) !important;
}

.yr-ui-form__asterisk {
  position: absolute;
  left: 12rpx;
  height: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  line-height: 1.15;
}

.yr-ui-form__item-label {
  padding-right: 12rpx;
  display: inline-block;
  flex-shrink: 0;
}

.yr-ui-form__item-sizing {
  box-sizing: border-box;
}

.yr-ui-form__item-content {
  flex: 1;
}

.yr-ui-form__item-bottom {
  position: absolute;
  bottom: 0;
  height: 1px;
  -webkit-transform: scaleY(0.5) translateZ(0);
  transform: scaleY(0.5) translateZ(0);
  transform-origin: 0 100%;
  z-index: 1;
}

.yr-ui-form__item-arrow {
  height: 40rpx;
  width: 40rpx;
  border-width: 3px 3px 0 0;
  border-style: solid;
  transform: rotate(45deg) scale(0.5);
  border-radius: 4rpx;
  flex-shrink: 0;
  margin-left: auto;
  box-sizing: border-box;
  transform-origin: center center;
  margin-right: -5.8579rpx;
}

.yr-ui-form__item-error {
  width: 100%;
  z-index: 2;
  font-size: 24rpx;
  line-height: 32rpx;
  padding-right: 32rpx;
  box-sizing: border-box;
}

.yr-ui-form__error-relative {
  position: relative;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
}

.yr-ui-form__error-absolute {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  transform: translateY(-100%);
  opacity: 0;
  transition-property: transform, opacity;
  transition-duration: 0.3s;
}

.yr-ui-form__error-active {
  opacity: 1;
  transform: translateY(0);
}

.yr-ui-form__error-text {
  font-size: 24rpx;
}

.yr-ui-form__error-right {
  text-align: right;
}