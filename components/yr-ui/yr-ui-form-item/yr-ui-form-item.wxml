<view class="yr-ui-form__item-wrap" style="background:{{background}};margin-top:{{marginTop}}rpx;margin-bottom:{{marginBottom}}rpx;border-radius:{{radius}}">
  <view class="yr-ui-form__item-outer {{highlight?'yr-ui-form__highlight':''}}" style="border-radius:{{radius}};padding:{{padding}};" bindtap="handleClick">
    <view class="yr-ui-form__wrap-inner" style="padding:{{padding}};">
      <view class="yr-ui-form__asterisk" wx:if="{{asterisk}}" style="color:{{akColor}};left:{{akPosiLeft}}">*</view>
      <view class="yr-ui-form__item-sizing" style="width:{{lWidth}}rpx;font-size:{{lSize}}rpx;color:{{lColor}};padding-right:{{labelRight}}rpx;text-align:{{lAlign}};font-weight: {{lWeight}};" wx:if="{{label}}">{{label}}</view>
      <view class="yr-ui-form__item-content">
        <slot></slot>
      </view>
      <slot name="right"></slot>
      <view class="yr-ui-form__item-arrow" wx:if="{{arrow}}" style="border-color:{{arrowColor}}">
      </view>
    </view>
    <view wx:if="{{bottomBorder}}" style="background:{{borderColor}};left:{{left}}rpx;right:{{right}}rpx" class="yr-ui-form__item-bottom"></view>
  </view>
  <slot name="vertical"></slot>
  <view class="yr-ui-form__item-error {{ePosition==1?'yr-ui-form__error-absolute':''}} {{eAlign=='right'?'yr-ui-form__error-right':''}} {{errorMsg && errorMsg!==true?'yr-ui-form__error-active':''}}" wx:if="{{ePosition==1 && showError && prop}}" style="padding-left:{{eLeft}};">
    <text class="yr-ui-form__error-text {{eAlign=='right'?'yr-ui-form__error-right':''}}" style="color:{{akColor}}">{{errorMsg}}</text>
  </view>
  <view class="yr-ui-form__item-error {{ePosition==2?'yr-ui-form__error-relative':''}} {{eAlign=='right'?'yr-ui-form__error-right':''}}" wx:if="{{ePosition==2 && errorMsg && errorMsg!==true && showError && prop}}" style="padding-left:{{eLeft}};">
    <text class="yr-ui-form__error-text {{eAlign=='right'?'yr-ui-form__error-right':''}}" style="color:{{akColor}}">{{errorMsg}}</text>
  </view>
</view>