<view class="yr-ui-panel__wrap {{isBorder?'':'yr-ui-panel__unlined'}} {{background?'':'yr-ui-panel__background'}}" style="background:{{background}};border-top-color:{{borderColor}};border-bottom-color:{{borderColor}};margin-top:{{marginTop}}rpx;margin-bottom:{{marginBottom}}rpx">
  <view class="yr-ui-panel__hd" style="background:{{hdBackground}};padding-left:{{padding}}rpx;padding-right:{{padding}}rpx" wx:if="{{panelData[head]}}">
    <text class="{{headColor?'':'yr-ui-panel__title-color'}}" style="font-size:{{headSize}}rpx;color:{{headColor}}rpx">{{panelData[head] || ''}}</text>
    <view wx:if="{{hdBorder}}" style="background:{{borderColor}};left:{{hdLeft}}rpx;right:{{hdRight}}rpx" class="yr-ui-panel__border {{borderColor?'':'yr-ui-panel__border-color'}}"></view>
  </view>
  <view class="yr-ui-panel__mediabox {{flexStart?'':'yr-ui-mediabox__center'}} {{highlight?'yr-ui-panel__hover-weex':''}} {{rowReverse?'yr-ui-panel__row-reverse':'yr-ui-panel__mediabox-row'}}" style="padding-left:{{padding}}rpx;padding-right:{{padding}}rpx" wx:for="{{listData}}" wx:key="index" hover-class="{{highlight?'yr-ui-panel__hover':''}}" hover-stay-time="{{150}}" bindtap="handleClick" data-index="{{index}}">
    <view class="yr-ui-panel__mb-hd {{rowReverse?'yr-ui-panel__mb-hdright':'yr-ui-panel__mb-hdleft'}}" wx:if="{{item[src]}}" style="width:{{width}}rpx;height:{{height}}rpx">
      <image class="yr-ui-panel__mb-thumb" src="{{item[src]}}" mode="widthFix" style="width:{{width}}rpx;height:{{height}}rpx;border-radius:{{radius}}rpx" />
    </view>
    <view class="yr-ui-panel__mb-bd">
      <text class="yr-ui-panel__mb-title {{color?'':'yr-ui-panel__title-color'}}" wx:if="{{item[title]}}" style="color:{{color}};font-size:{{size}}rpx;font-weight:{{fontWeight}}">{{item[title] || ''}}</text>
      <text class="yr-ui-panel__mb-desc {{descColor?'':'yr-ui-panel__sub-color'}}" wx:if="{{item[desc]}}" style="color:{{descColor}};font-size:{{descSize}}rpx">{{item[desc] || ''}}</text>
      <view class="yr-ui-panel__mb-info" wx:if="{{item[source] || item[time] || item[extra]}}">
        <text class="yr-ui-panel__info-meta {{infoColor?'':'yr-ui-panel__info-color'}}" style="color:{{infoColor}};font-size:{{infoSize}}rpx" wx:if="{{item[source]}}">{{item[source] || ''}}</text>
        <text class="yr-ui-panel__info-meta {{infoColor?'':'yr-ui-panel__info-color'}}" style="color:{{infoColor}};font-size:{{infoSize}}rpx" wx:if="{{item[time]}}">{{item[time] || ''}}</text>
        <text class="yr-ui-panel__info-extra {{infoColor?'':'yr-ui-panel__info-color'}} {{infoColor?'':'yr-ui-panel__extra-bcolor'}}" style="color:{{infoColor}};font-size:{{infoSize}}rpx;border-left-color:{{infoColor}}" wx:if="{{item[extra]}}">{{item[extra] || ''}}</text>
      </view>
    </view>
    <view wx:if="{{bdBorder && index!==listData.length-1}}" style="background:{{borderColor}};left:{{bdLeft}}rpx;right:{{bdRight}}rpx" class="yr-ui-panel__border {{borderColor?'':'yr-ui-panel__border-color'}}"></view>
  </view>
  <slot></slot>
</view>