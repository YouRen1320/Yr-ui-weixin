<view class="yr-ui-footer {{isFixed?'yr-ui-footer__fixed-bottom':''}}" style="background:{{background}};bottom:{{bottom}}rpx;">
  <view class="yr-ui-footer__link" wx:if="{{navigate.length>0}}">
    <navigator wx:for="{{navigate}}" wx:key="index" class="yr-ui-link__item" hover-class="yr-ui-link-hover" hover-stop-propagation open-type="{{item.openType || 'navigate'}}" url="{{item.url}}" delta="{{item.delta}}"><text class="yr-ui-link__text {{item.color?'':'yr-ui-link__color'}} {{index===navigate.length-1?'yr-ui-link__text-border':''}}" style="color:{{item.color || '#465CFF'}};font-size:{{(item.size || 28)+'rpx'}};border-color:{{borderColor}};line-height:{{item.size || 28}}rpx">{{item.text}}</text>
    </navigator>
  </view>
  <view class="yr-ui-footer__text {{safeArea?'yr-ui-footer__safearea':''}}">
    <text style="color:{{color}};font-size:{{size}}rpx">{{text}}</text>
  </view>
</view>