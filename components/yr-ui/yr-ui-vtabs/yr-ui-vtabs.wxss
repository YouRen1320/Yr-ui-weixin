.yr-ui-vtabs__wrap {
  display: flex;
  flex-direction: row;
}

.yr-ui-vtabs__scroll-bar {
  flex-shrink: 0;
}

.yr-ui-vtabs__item__wrap {
  display: flex;
  flex-shrink: 0;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.yr-ui-vtabs__item {
  padding: 0 20rpx;
  display: flex;
  box-sizing: border-box;
  overflow: hidden;
  flex-direction: row;

  align-items: center;
  justify-content: center;
  text-align: center;
}

.yr-ui-vtabs__icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}


.yr-ui-vtabs__item-disable {
  opacity: .5;
}

.yr-ui-vtabs__left-border {
  border-left-width: 8rpx;
  border-left-style: solid;
}

.yr-ui-vtabs__text {
  display: block;
  position: relative;
}

.yr-ui-vtabs__badge {
  height: 36rpx;
  padding: 0 12rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  line-height: 36rpx;
  border-radius: 100px;
  min-width: 36rpx !important;
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: -32rpx;
  top: -18rpx;
  transform: scale(0.9);
  z-index: 10;
}

.yr-ui-vtabs__badge-dot {
  height: 8px !important;
  width: 8px !important;
  display: inline-block;
  border-radius: 50%;
  position: absolute;
  right: -6px;
  top: -3px;
  z-index: 10;
}

.yr-ui-vtabs__content-wrap {
  flex: 1;
}

.yr-ui-vtabs__content {
  width: 100%;
  height: 100%;
}

.yr-ui-vtabs__selected-color {
  color: var(--yr-ui-color-primary, #465CFF) !important;
}

.yr-ui-vtabs__border-color {
  border-left-color: var(--yr-ui-color-primary, #465CFF) !important;
}

.yr-ui-vtabs__badge-color {
  background: var(--yr-ui-color-danger, #FF2B2B) !important;
}