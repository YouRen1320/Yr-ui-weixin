<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title">Animation</view>
    <view class="yr-ui-page__desc">Animation 动画，过渡效果。</view>
  </view>
  <view class="yr-ui-page__bd yr-ui-page__spacing">
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Fade" bold margin="24rpx 0"
      bindclick="ani" data-type="1"></yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Slide Top" bold bindclick="ani" data-type="2">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Slide Left" bold margin="24rpx 0"
      bindclick="ani" data-type="3">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Slide Right" bold bindclick="ani" data-type="4">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Slide Bottom" bold margin="24rpx 0"
      bindclick="ani" data-type="5">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Zoom In" bold bindclick="ani" data-type="6">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Zoom Out" bold margin="24rpx 0"
      bindclick="ani" data-type="7"></yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Custom" bold
      bindclick="ani" data-type="8"></yr-ui-button>
  </view>
  <yr-ui-animation duration="{{500}}" animationType="{{mode}}" styles="{{styles}}" show="{{show}}" bindclick="handleClick"
    bindchange="change">
    <view class="yr-ui-ani__box yr-ui-flex__center">transition</view>
  </yr-ui-animation>
</view>