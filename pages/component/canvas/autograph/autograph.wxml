<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Autograph <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Autograph 手写签名，用于手写电子签名。</view>
  </view>
  <view class="yr-ui-page__bd">
    <view class="yr-ui-section__title">请在下方空白处签名</view>
    <yr-ui-autograph id="autograph" bindready="ready"></yr-ui-autograph>
    <view class="yr-ui-btn__box">
      <yr-ui-button type="gray" width="400rpx" height="84rpx" text="重签" bold margin="64rpx 0 24rpx" bindclick="redraw">
      </yr-ui-button>
      <yr-ui-button type="gray" width="400rpx" height="84rpx" text="完成" bold bindclick="complete">
      </yr-ui-button>
    </view>
    <view class="yr-ui-autograph__box">
      <text class="yr-ui-text">您的签名：</text>
      <image src="{{src}}" wx:if="{{src}}" mode="widthFix" class="yr-ui-img" bindtap="preview"></image>
    </view>
  </view>
</view>