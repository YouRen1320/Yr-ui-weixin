<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Barcode <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Barcode 条形码，用于展现条形码信息。</view>
  </view>
  <view class="yr-ui-page__bd">
    <view class="yr-ui-input__box">
      <yr-ui-input model:value="{{val}}" maxlength="13" type="number"></yr-ui-input>
      <view class="yr-ui-tips">请输入13位条码信息，扫描只能识别有效的条形码（EAN-13）。</view>
    </view>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="生成" bold margin="32rpx 0 64rpx" bindclick="barcode">
    </yr-ui-button>
    <yr-ui-barcode id="barcode" value="{{val}}"></yr-ui-barcode>
    <view class="yr-ui-input__box yr-ui-mt--96">
      <yr-ui-input model:value="{{code128}}" placeholder="请输入条码"></yr-ui-input>
      <view class="yr-ui-tips">请输入条码信息，不支持中文（类型：Code 128）。</view>
    </view>
    <yr-ui-button type="gray" btn-size="medium" text="生成" bold margin="32rpx 0 64rpx" bindclick="barcodeCode128">
    </yr-ui-button>
    <yr-ui-barcode type="2" id="barcode_code" value="{{code128}}"></yr-ui-barcode>
  </view>
</view>