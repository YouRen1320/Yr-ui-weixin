<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title">SegmentedControl</view>
    <view class="yr-ui-page__desc">SegmentedControl 分段器。</view>
  </view>
  <view class="yr-ui-page__bd yr-ui-page__spacing">
    <view class="yr-ui-section__title">基础使用</view>
    <yr-ui-segmented-control values="{{values}}" bindclick="itemClick"></yr-ui-segmented-control>
    <view class="yr-ui-section__title">自定义颜色/高度</view>
    <yr-ui-segmented-control values="{{values}}" marginTop="24" color="#FF2B2B" height="{{80}}"></yr-ui-segmented-control>
    <yr-ui-segmented-control values="{{values}}" marginTop="24" color="#FFB703" height="{{72}}"></yr-ui-segmented-control>
    <yr-ui-segmented-control values="{{values}}" marginTop="24" color="#09BE4F" height="{{88}}"></yr-ui-segmented-control>
    <yr-ui-segmented-control values="{{values}}" marginTop="24" color="#6831FF"></yr-ui-segmented-control>
    <yr-ui-segmented-control values="{{values}}" marginTop="24" color="#333333"></yr-ui-segmented-control>
    <view class="yr-ui-section__title">text类型</view>
    <yr-ui-segmented-control values="{{values}}" marginTop="24" color="#333" activeColor="#FFB703" type="text" height="100" size="32"></yr-ui-segmented-control>
    <view class="yr-ui-section__title">不同数据格式</view>
    <yr-ui-segmented-control values="{{values2}}" bindclick="itemClick"></yr-ui-segmented-control>
    <view class="yr-ui-section__title">禁用状态</view>
    <yr-ui-segmented-control values="{{values2}}" disabled></yr-ui-segmented-control>
    <view class="yr-ui-section__title">默认选中</view>
    <yr-ui-segmented-control values="{{values2}}" current="{{1}}"></yr-ui-segmented-control>
    <view class="yr-ui-section__title">改变圆角值</view>
    <yr-ui-segmented-control values="{{values2}}" radius="{{100}}"></yr-ui-segmented-control>
    <view class="yr-ui-section__title">单项禁用</view>
    <yr-ui-segmented-control values="{{values3}}"></yr-ui-segmented-control>
  </view>
</view>