<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Steps <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Steps 步骤条，显示一个任务的进度或者引导用户完成某个复杂任务。</view>
  </view>
  <view class="yr-ui-page__bd">
    <view class="yr-ui-section__title">基础使用</view>
    <yr-ui-steps items="{{items}}" current="{{current}}"></yr-ui-steps>
    <view class="yr-ui-section__title">线条贯穿圆点</view>
		<yr-ui-steps items="{{items}}" current="{{current}}" line-through></yr-ui-steps>
    <view class="yr-ui-section__title">数字节点/线条加粗</view>
    <yr-ui-steps items="{{items2}}" current="{{current}}" activeColor="#FFB703" lineBold></yr-ui-steps>
    <view class="yr-ui-section__title">不显示对号标识</view>
    <yr-ui-steps items="{{items2}}" current="{{current}}" isMark="{{false}}"></yr-ui-steps>
    <view class="yr-ui-section__title">带描述</view>
    <yr-ui-steps items="{{items3}}" current="{{current}}"></yr-ui-steps>
    <view class="yr-ui-section__title">当前步骤失败</view>
		<yr-ui-steps items="{{items3}}" current="{{current3}}" processStatus="fail" process-color="#FF2B2B" lineBold></yr-ui-steps>
    <view class="yr-ui-section__title">进行中（direction=row 有效）</view>
		<yr-ui-steps items="{{items3}}" current="{{current}}" processStatus="wait" process-color="#FFB703" isWait lineBold></yr-ui-steps>
		<view class="yr-ui-section__title">当前步骤失败</view>
		<yr-ui-steps items="{{items3}}" current="{{current3}}" processStatus="fail" active-color="#09BE4F" process-color="#FF2B2B" isWait lineBold></yr-ui-steps>
    <view class="yr-ui-section__title">自定义图标</view>
    <yr-ui-steps items="{{items4}}" current="{{current}}" radius="24rpx"></yr-ui-steps>
    <view class="yr-ui-section__title">纵向展示</view>
    <yr-ui-steps items="{{items2}}" current="{{current}}" direction="column" padding="0 32rpx"></yr-ui-steps>

    <view class="yr-ui-btn__box">
      <yr-ui-button type="gray" width="400rpx" height="84rpx" text="Next step" bold margin="24rpx 0" bindclick="stepChange"></yr-ui-button>
    </view>
  </view>
</view>