<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">BottomNavbar <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">BottomNavbar 底部导航栏，用于提供页面的导航能力。</view>
  </view>
  <view class="yr-ui-page__bd">
    <view class="yr-ui-section__title">基础使用</view>
    <yr-ui-bottom-navbar items="{{items}}" isFixed="{{false}}"></yr-ui-bottom-navbar>
    <view class="yr-ui-section__title">改变颜色</view>
    <yr-ui-bottom-navbar background="#222" color="#d1d1d1" lineColor="#333" items="{{items}}" isFixed="{{false}}">
    </yr-ui-bottom-navbar>
  </view>
  <yr-ui-bottom-navbar bindinit="init" bindclick="onClick" left="8" items="{{options}}">
  </yr-ui-bottom-navbar>
  <yr-ui-bubble-box width="200" size="{{28}}" direction="top" show="{{show}}" triangle="{{triangle}}" bottom="{{height}}" left="{{32}}" items="{{subItems}}" bindclick="subClick" bindclose="onClose"></yr-ui-bubble-box>
</view>