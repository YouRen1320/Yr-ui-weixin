.yr-ui-header {
  width: 100%;
  padding: 52rpx 32rpx;
  box-sizing: border-box;
}

.yr-ui-body {
  width: 100%;
  height: 800px;
  padding:0 32rpx;
  box-sizing: border-box;
}


.yr-ui-title__text {
  text-align: left;
  font-size: 36rpx;
  font-weight: 600;
}

.yr-ui-desc__text {
  margin-top: 8rpx;
  color: #B2B2B2;
  text-align: left;
  font-size: 28rpx;
  font-weight: 400;
  word-break: break-all;
}
.yr-ui-footer{
  padding: 64rpx 32rpx;
  text-align: center;
  font-size: 24rpx;
}