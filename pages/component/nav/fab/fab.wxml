<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Fab <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Fab 浮动按钮，主要特点是轻盈、便捷、高效，用于在屏幕上执行主要或最常见的操作。</view>
  </view>
  <view class="yr-ui-page__bd">
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="基础使用" bold margin="24rpx 0" bindclick="fab" data-type="1">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="更换背景色" bold bindclick="fab" data-type="2">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="图标换为文本" bold margin="24rpx 0" bindclick="fab" data-type="3">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="切换位置" bold bindclick="fab" data-type="4">
    </yr-ui-button>
  </view>
  <yr-ui-fab background="{{background}}" position="{{isLeft?'left':'right'}}" fabs="{{fabs}}" bindclick="handleClick" isDrag></yr-ui-fab>

  <yr-ui-fab zIndex="{{10}}" position="{{isLeft?'right':'left'}}" bindclick="fabClick" custom>
    <yr-ui-icon name="edit-fill" color="#fff"></yr-ui-icon>
  </yr-ui-fab>
</view>