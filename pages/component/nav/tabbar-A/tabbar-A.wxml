<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Tabbar <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Tabbar 标签栏，用于在不同功能模块之间进行切换，小图标建议尺寸84*84。</view>
  </view>
  <view class="yr-ui-page__bd">
    <view class="yr-ui-section__title">基础使用</view>
    <yr-ui-tabbar isFixed="{{false}}" tabBar="{{tabBar2}}" current="{{current}}" bindclick="itemClick"></yr-ui-tabbar>
    <view class="yr-ui-section__title">纯文本</view>
    <yr-ui-tabbar isFixed="{{false}}" background="rgba(0,0,0,.5)" color="rgba(255,255,255,.7)" selectedColor="#fff" size="32" font-weight="500" tabBar="{{tabBar}}" current="{{current}}" bindclick="itemClick"></yr-ui-tabbar>
    <view class="yr-ui-section__title">纯图标</view>
    <yr-ui-tabbar isFixed="{{false}}" tabBar="{{tabBar3}}" current="{{current}}" bindclick="itemClick"></yr-ui-tabbar>
    <view class="yr-ui-section__title">中间使用图标</view>
    <yr-ui-tabbar isFixed="{{false}}" tabBar="{{tabBar4}}" current="{{current2}}" bindclick="itemClick2"></yr-ui-tabbar>
    <view class="yr-ui-section__title">中间大图标（凸出）</view>
    <yr-ui-tabbar isFixed="{{false}}" tabBar="{{tabBar5}}" current="{{current2}}" bindclick="itemClick2"></yr-ui-tabbar>
    <view class="yr-ui-section__title">带角标</view>
    <yr-ui-tabbar isFixed="{{false}}" tabBar="{{tabBar6}}" current="{{current}}" bindclick="itemClick"></yr-ui-tabbar>
    <view class="yr-ui-section__title">使用字体图标（yr-ui-icon）</view>
    <yr-ui-tabbar isFixed="{{false}}" selected-color="#FFB703" tabBar="{{tabBar7}}" current="{{current}}" bindclick="itemClick"></yr-ui-tabbar>
  </view>
</view>