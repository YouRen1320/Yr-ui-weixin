<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Landscape <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Landscape 压屏窗，用于在浮层中显示广告或说明。</view>
  </view>
  <view class="yr-ui-page__bd">
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="关闭按钮-左上" bold margin="24rpx 0" bindclick="showPopup" data-type="1"></yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="关闭按钮-右上" bold bindclick="showPopup" data-type="2">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="关闭按钮-中下" bold margin="24rpx 0" bindclick="showPopup" data-type="3">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="无关闭按钮" bold bindclick="showPopup" data-type="4">
    </yr-ui-button>
  </view>
  <yr-ui-landscape show="{{show}}" closable="{{closable}}" position="{{position}}" bindclose="closePopup">
    <view class="yr-ui-ani__box">
      <image class="yr-ui-hd__img" src="/static/images/member/light/img_layer_3x.png" mode="widthFix"></image>
      <view class="yr-ui-flex__center yr-ui-flex__column">
        <view class="yr-ui-ani__title">开通会员</view>
        <view class="yr-ui-desc">会员开通请前往 Yr-ui官网(<text>yr-ui.cn</text>)，在官网购买开通会员后，前往个人中心订单页即可下载会员源码。
        </view>
        <yr-ui-button width="400rpx" height="84rpx" radius="100rpx" background="linear-gradient(180deg, #E3BF82 0%, #997B4A 100%)" borderColor="rgba(0,0,0,0)" border-width="0" bindclick="btnClick">我知道了</yr-ui-button>
      </view>
    </view>
  </yr-ui-landscape>
</view>