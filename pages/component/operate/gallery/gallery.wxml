<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Gallery <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Gallery 画廊，用于预览图片或其他操作。</view>
  </view>
  <view class="yr-ui-page__bd">
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="自定义Gallery" bold margin="24rpx 0" bindclick="showGallery"></yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="原生预览" bold bindclick="previewImage"></yr-ui-button>
  </view>
  <yr-ui-gallery urls="{{urls}}" show="{{show}}" bindhide="hideGallery"></yr-ui-gallery>
</view>