<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Progress <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Progress 进度条，用于展现某个任务的当前进度。</view>
  </view>
  <view class="yr-ui-page__bd yr-ui-page__spacing">
    <view class="yr-ui-section__title">基础使用</view>
    <yr-ui-progress percent="{{80}}"></yr-ui-progress>
    <view class="yr-ui-section__title">显示进度</view>
    <yr-ui-progress percent="{{70}}" showInfo></yr-ui-progress>
    <view class="yr-ui-section__title">改变颜色</view>
    <yr-ui-progress percent="{{60}}" background="#ddd" activeColor="#FFB703"></yr-ui-progress>
    <view class="yr-ui-section__title">设置高度</view>
    <yr-ui-progress percent="{{70}}" height="16" radius="16" activeColor="#09BE4F"></yr-ui-progress>
    <view class="yr-ui-section__title">控制进度</view>
    <yr-ui-progress percent="{{percent}}" showInfo></yr-ui-progress>
    <view class="yr-ui-btn__box">
      <yr-ui-button type="gray" width="400rpx" height="84rpx" text="percent" bold margin="24rpx 0" bindclick="percentChange"></yr-ui-button>
    </view>
  </view>
</view>