<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" indtap="vip">CopyText <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">CopyText 长按复制，用于复制关键文本信息，可扩展其他功能按钮。</view>
  </view>
  <view class="yr-ui-page__bd">
    <view class="yr-ui-section__title">上方显示按钮</view>
    <view class="yr-ui-copy__box">
      <yr-ui-copy-text text="长按文本复制"></yr-ui-copy-text>
    </view>
    <view class="yr-ui-section__title">下方显示按钮</view>
    <view class="yr-ui-copy__box">
      <yr-ui-copy-text direction="bottom" text="长按文本复制" value="https://doc.yr-ui.cn" color="#465CFF" size="30"></yr-ui-copy-text>
    </view>
    <view class="yr-ui-section__title">左侧显示按钮</view>
    <view class="yr-ui-copy__box">
      <yr-ui-copy-text direction="left" text="长按文本复制" value="https://doc.yr-ui.cn" color="#465CFF" size="30">
      </yr-ui-copy-text>
    </view>
    <view class="yr-ui-section__title">右侧显示按钮</view>
    <view class="yr-ui-copy__box">
      <yr-ui-copy-text direction="right" text="长按文本复制" value="https://doc.yr-ui.cn" color="#465CFF" size="30">
      </yr-ui-copy-text>
    </view>
    <view class="yr-ui-section__title">扩展按钮</view>
    <view class="yr-ui-copy__box">
      <yr-ui-copy-text text="长按文本复制" value="https://doc.yr-ui.cn" color="#FFB703" size="30" buttons="{{['回复','评论']}}" bindclick="btnClick"></yr-ui-copy-text>
    </view>
  </view>
</view>