<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Parse <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Parse 富文本解析，支持 html 或 markdown 解析。</view>
  </view>
  <view class="yr-ui-page__bd">
    <!-- html 解析 -->
    <yr-ui-parse nodes="{{html}}" bind:preview="preview" bind:atap="atap"></yr-ui-parse>

    <!-- markdown 解析 -->
    <yr-ui-parse nodes="{{md}}" language="md" thBgcolor="{{false}}" bind:preview="preview"></yr-ui-parse>
  </view>
</view>