<view class="yr-ui-wrap">
		<view class="yr-ui-page__hd">
			<view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">SlideVerify <image
					src="/static/images/index/light/icon_member_3x.png"></image>
			</view>
			<view class="yr-ui-page__desc">SlideVerify 滑动验证码，根据提示进行行为验证。</view>
		</view>
		<view class="yr-ui-page__bd yr-ui-page__spacing">
			<view class="yr-ui-section__title">基础使用</view>
			<yr-ui-slide-verify bindsuccess="success" bindfail="fail"></yr-ui-slide-verify>
			<view class="yr-ui-section__title">调整样式</view>
			<yr-ui-slide-verify background="rgba(9, 190, 79, .05)" activeBgColor="#09BE4F" passColor="#09BE4F"
				lineColor="#FFB703" bindsuccess="success" bindfail="fail"></yr-ui-slide-verify>
			<view class="yr-ui-section__title">重置验证</view>
			<yr-ui-slide-verify id="sv" bindsuccess="success" bindfail="fail"></yr-ui-slide-verify>
			<view class="yr-ui-btn__box">
        <yr-ui-button type="gray" width="400rpx" height="84rpx" text="重置验证" bold margin="40rpx"
					bindclick="reset">
				</yr-ui-button>
			</view>
		</view>
	</view>