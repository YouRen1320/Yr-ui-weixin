<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">CountdownVerify <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">CountdownVerify 验证码倒计时，一般用于短信验证码发送后展现的倒计时。</view>
  </view>
  <view class="yr-ui-page__bd yr-ui-page__spacing">
    <view class="yr-ui-section__title">基础使用</view>
    <yr-ui-countdown-verify id="fui_cdv" bindsend="sendCode"></yr-ui-countdown-verify>
    <view class="yr-ui-section__title">默认倒计时状态</view>
    <yr-ui-countdown-verify borderColor="{{init?'#465CFF':'#B2B2B2'}}" color="{{init?'#465CFF':'#B2B2B2'}}" id="fui_cdv2" bindsend="sendCode2" bindend="end2">
    </yr-ui-countdown-verify>
    <view class="yr-ui-section__title">调整样式</view>
    <yr-ui-countdown-verify borderColor="#FFB703" background="#FFB703" sent="秒后获取" color="#fff" radius="40" id="fui_cdv3" bindsend="sendCode3">
    </yr-ui-countdown-verify>
    <view class="yr-ui-section__title">出现错误时重置</view>
    <yr-ui-countdown-verify id="fui_cdv4" bindsend="sendCode4"></yr-ui-countdown-verify>
  </view>

</view>