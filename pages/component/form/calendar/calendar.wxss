.yr-ui-wrap {
  padding-bottom: 64rpx;
}

.yr-ui-section__title {
  margin-left: 32rpx;
  box-sizing: border-box;
}

.yr-ui-result {
  width: 100%;
  padding: 64rpx 32rpx 32rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: normal;
  word-break: break-all;
}

.yr-ui-scroll__wrap {
  padding-top: 30rpx;
  position: relative;
}

.yr-ui-calendar-title {
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  padding-bottom: 24rpx;
}

.yr-ui-icon__close {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}