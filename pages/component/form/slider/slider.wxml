<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Slider <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Slider 滑块选择器，用于在一个区间内选择特定值。</view>
  </view>
  <view class="yr-ui-page__bd yr-ui-page__spacing">
    <view class="yr-ui-section__title">默认使用</view>
    <yr-ui-slider width="{{width}}" bindchange="onChange" bindchanging="onChanging"></yr-ui-slider>
    <view class="yr-ui-section__title">初始值/显示value</view>
    <yr-ui-slider value="{{50}}" showValue></yr-ui-slider>
    <view class="yr-ui-section__title">仅显示/禁止滑动</view>
    <yr-ui-slider value="{{70}}" showValue disabled></yr-ui-slider>
    <view class="yr-ui-section__title">调整颜色</view>
    <yr-ui-slider showValue background="rgba(255, 183, 3, .3)" activeColor="#FFB703" blockColor="#FFB703" valueColor="#FFB703"></yr-ui-slider>
    <view class="yr-ui-section__title">区间选择/min/max</view>
    <yr-ui-slider showValue section width="220" min="{{100}}" max="{{800}}" value="{{100}}" endValue="{{800}}" bindchange="sectionChange">
    </yr-ui-slider>
  </view>
</view>