<view class="yr-ui-wrap">
  <view class="yr-ui-page__hd">
    <view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">Picker <image src="/static/images/index/light/icon_member_3x.png"></image>
    </view>
    <view class="yr-ui-page__desc">Picker 选择器，用于数据的选择，可联动选择。</view>
  </view>
  <view class="yr-ui-page__bd">
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="一级选择" bold margin="24rpx" bindclick="btnClick" data-type="1">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="二级选择 - 不联动" bold bindclick="btnClick" data-type="2">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="三级选择 - 不联动" bold margin="24rpx" bindclick="btnClick" data-type="3">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="四级选择 - 不联动" bold bindclick="btnClick" data-type="4">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="二级选择 - 联动" bold margin="24rpx" bindclick="btnClick" data-type="5">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="三级选择 - 联动" bold bindclick="btnClick" data-type="6">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="四级选择 - 联动" bold margin="24rpx" bindclick="btnClick" data-type="7">
    </yr-ui-button>
    <yr-ui-button type="gray" width="400rpx" height="84rpx" text="设置默认值 / 暗黑" bold bindclick="pickerShow">
    </yr-ui-button>

    <view class="yr-ui-picker__result">
      选择的值为：{{result}}
    </view>
  </view>
  <yr-ui-picker layer="{{layer}}" options="{{items}}" linkage="{{linkage}}" show="{{show}}" bindchange="change" bindcancel="cancel">
  </yr-ui-picker>

  <yr-ui-picker theme="dark" title="请选择时间" value="{{value}}" param="dark" options="{{options}}" bindchange="onChange" id="picker">
  </yr-ui-picker>
</view>