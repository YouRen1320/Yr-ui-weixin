<view class="yr-ui-wrap">
  <view class="yr-ui-banner__box">
    <image class="yr-ui-banner" src="{{resUrl}}/index/light/img_banner_3x.png" mode="widthFix"></image>
    <view class="yr-ui-banner__content">
      <image class="yr-ui-logo" src="/static/images/common/img_logo.png" mode="widthFix"></image>
      <view class="yr-ui-title">Yr-ui</view>
      <view class="yr-ui-desc">Yr-ui是一款轻量、全面可靠的移动端组件库。</view>
    </view>
    <view class="yr-ui-tabs__box">
      <scroll-view class="yr-ui-scroll__box" id="fui_tabs" scroll-with-animation scroll-x
        scroll-into-view="{{scrollInto}}">
        <view class="yr-ui-scroll__view yr-ui-align__center">
          <view wx:for="{{tabs}}" wx:for-item="tab" wx:key="index"
            class="yr-ui-tab__item yr-ui-flex__center {{tabIndex===index?'yr-ui-tab__item-active':''}}" id="{{tab.id}}"
            bindtap="tabClick" data-index="{{index}}">
            <view class="{{tabIndex===index?'yr-ui-tab__item-text':''}}">{{ tab.name }}</view>
          </view>
        </view>
      </scroll-view>
      <swiper current="{{tabIndex}}" class="yr-ui-swiper__box" duration="{{300}}" bindchange="tabChange"
        style="height:{{height}}px">
        <swiper-item class="yr-ui-swiper__item" wx:for="{{tabs}}" wx:key="index" wx:for-item="tab">
          <scroll-view class="yr-ui-scroll__box" scroll-y style="height:{{height}}px">
            <view class="yr-ui-list__view">
              <yr-ui-list-cell arrow padding="0 32rpx" bottomBorder="{{false}}" radius="16rpx" marginTop="24"
                wx:for="{{tab.data}}" wx:for-index="idx" wx:key="idx" bindclick="href" data-id="{{tab.id}}"
                data-page="{{item.page}}">
                <view class="yr-ui-list__item yr-ui-align__center">
                  <view class="yr-ui-item__icon-box">
                    <image class="yr-ui-item__icon" src="{{resUrl}}/index/light/icon_{{item.icon}}_3x.png"></image>
                  </view>
                  <text>{{item.name}}</text>
                  <image wx:if="{{item.vip}}" class="yr-ui-vip__icon" src="/static/images/index/light/icon_member_3x.png">
                  </image>
                </view>
              </yr-ui-list-cell>
            </view>
          </scroll-view>
        </swiper-item>
      </swiper>
    </view>
  </view>
</view>