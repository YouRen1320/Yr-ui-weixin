page {
  background-color: #FFFFFF;
}

.yr-ui-page-bd {
  display: flex;
  flex-wrap: wrap;
}

.yr-ui-layout__item {
  width: 50%;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.yr-ui-layout__item:nth-of-type(odd) {
  padding-right: 15rpx;
}

.yr-ui-layout__item:nth-of-type(even) {
  padding-left: 15rpx;
}

.yr-ui-layout__item-inner {
  background: #FFFFFF;
  box-shadow: 0 4rpx 8rpx 0 rgba(2, 4, 38, 0.05);
  border-radius: 24rpx;
  overflow: hidden;
  padding-bottom: 32rpx;
}

.yr-ui-cover__box {
  width: 100%;
  height: 202rpx;
}

.yr-ui-cover {
  width: 164rpx;
  height: 118rpx;
}

.yr-ui-name__cn {
  line-height: 32rpx;
  text-align: center;
  padding-top: 28rpx;
}

.yr-ui-name__en {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #B2B2B2;
  text-align: center;
  padding-top: 16rpx;
}