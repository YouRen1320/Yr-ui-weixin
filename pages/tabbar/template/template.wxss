page {
  background-color: #FFFFFF;
}

.yr-ui-page-bd {
  display: flex;
  flex-wrap: wrap;
}

.yr-ui-template__item {
  width: 50%;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.yr-ui-template__item:nth-of-type(odd) {
  padding-right: 15rpx;
}

.yr-ui-template__item:nth-of-type(even) {
  padding-left: 15rpx;
}

.yr-ui-template__item-inner {
  height: 176rpx;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  padding-left: 32rpx;
  box-sizing: border-box;
}

.yr-ui-icon {
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}

.yr-ui-name__cn {
  line-height: 32rpx;
  padding-top: 62rpx;
}

.yr-ui-name__en {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #B2B2B2;
  padding-top: 16rpx;
}