/* 商品列表 css */
.yr-ui-goods__list {
  width: 100%;
  display: flex;
  overflow: hidden;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.yr-ui-goods__item {
  display: flex;
  background-color: #fff;
}

.yr-ui-goods__hover:active {
  background-color: rgba(0, 0, 0, 0.2);
}

.yr-ui-goods__item-card {
  width: 344rpx;
  flex-direction: column;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  transform: translateY(0);
}

.yr-ui-goods__item-list {
  width: 100%;
  box-sizing: border-box;
  padding: 12rpx 24rpx;
  flex-direction: row;
}

.yr-ui-gi__mr {
  margin-right: 16rpx;
}

.yr-ui-goods__item-content {
  height: 252rpx;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: space-between;
}

.yr-ui-goods__item-top {
  width: 426rpx;
}

.yr-ui-card__padding {
  padding: 20rpx;
}

.yr-ui-list__padding {
  padding: 12rpx 0 12rpx 24rpx;
}

.yr-ui-goods__item-price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.yr-ui-goods__item-attr {
  flex-direction: row;
  padding-top: 8rpx;
}