<view class="yr-ui-wrap">
		<view class="yr-ui-page__hd">
			<view class="yr-ui-align__center" bindtap="vip">
				<text class="yr-ui-page__title">ProductList</text>
				<image src="/static/images/index/light/icon_member_3x.png" class="yr-ui-vip__icon"></image>
			</view>
			<text class="yr-ui-page__desc">商品列表，常用的页面布局，可提升开发效率以及带来舒服的视觉效果！</text>
		</view>
		<view class="yr-ui-page__bd">
			<view class="yr-ui-section__title">大图模式</view>
			<!-- 大图模式 -->
			<view class="yr-ui-goods__list">
				<view class="yr-ui-goods__item yr-ui-goods__item-card {{index%2===0?'yr-ui-gi__mr':''}}" wx:for="{{productList}}" wx:key="index" bindtap="handleClick">
					<yr-ui-lazyload radius="16rpx 16rpx 0 0" width="345" height="344" src="{{item.src}}" mode="aspectFill">
					</yr-ui-lazyload>
					<view class="yr-ui-goods__item-content yr-ui-card__padding">
						<view>
							<yr-ui-overflow-hidden rows="2" size="28" text="{{item.title}}">
							</yr-ui-overflow-hidden>
							<view class="yr-ui-goods__item-attr">
								<yr-ui-tag text="{{item.tag}}" padding="4rpx" background="rgba(255, 43, 43, .05)"	color="#FF2B2B" borderColor="transparent"></yr-ui-tag>
							</view>
						</view>
						<view>
							<view class="yr-ui-goods__item-price">
								<yr-ui-text text="￥" font-weight="500" size="22" color="#FF2B2B"></yr-ui-text>
								<yr-ui-text lineHeight font-weight="500" text="{{parse.getPrice(item.price,1)}}" size="34"
									color="#FF2B2B">
								</yr-ui-text>
								<yr-ui-text font-weight="500" text="{{parse.getPrice(item.price,2)}}" size="24" color="#FF2B2B">
								</yr-ui-text>
							</view>
							<yr-ui-text padding="4rpx 0 0" text="{{item.evaluate}}条评价" size="24" color="#7F7F7F"></yr-ui-text>
						</view>
					</view>
				</view>
			</view>

			<view class="yr-ui-section__title">列表模式</view>
			<!-- 列表模式-->
			<view class="yr-ui-goods__list">
				<view class="yr-ui-goods__item yr-ui-goods__item-list yr-ui-goods__hover" wx:for="{{productList}}" wx:key="index" bindtap="handleClick">
					<yr-ui-lazyload radius="16" width="252" height="252" src="{{item.src}}" mode="aspectFill">
					</yr-ui-lazyload>
					<view class="yr-ui-goods__item-content yr-ui-list__padding">
						<view class="yr-ui-goods__item-top">
							<yr-ui-overflow-hidden rows="2" size="28" text="{{item.title}}">
							</yr-ui-overflow-hidden>
							<view class="yr-ui-goods__item-attr">
								<yr-ui-tag text="{{item.tag}}" padding="4rpx" background="rgba(255, 43, 43, .05)"	color="#FF2B2B" borderColor="transparent"></yr-ui-tag>
							</view>
						</view>
						<view>
							<view class="yr-ui-goods__item-price">
								<yr-ui-text font-weight="500" text="￥" size="22" color="#FF2B2B"></yr-ui-text>
								<yr-ui-text font-weight="500" lineHeight text="{{parse.getPrice(item.price,1)}}" size="34" color="#FF2B2B">
								</yr-ui-text>
								<yr-ui-text font-weight="500" text="{{parse.getPrice(item.price,2)}}" size="24" color="#FF2B2B"></yr-ui-text>
							</view>
							<yr-ui-text padding="4rpx 0 0" text="{{item.evaluate}}条评价" size="24" color="#7F7F7F"></yr-ui-text>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>

  <wxs module="parse">
     module.exports={
       getPrice:function(price, type) {
				if (!price) return ''
				var arr = price.split('.')
				return type === 1 ? arr[0] : '.' + arr[1]
		  	}
     }
  </wxs>