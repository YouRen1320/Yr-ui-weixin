page {
  font-weight: normal;
}

.yr-ui-section__title {
  margin-left: 32rpx;
}

/* 布局内容样式 start */

.yr-ui-goods__bar-wrap {
  width: 100%;
  height: 100rpx;
  background: #fff;
}


.yr-ui-goodsbar__item {
  height: 92rpx;
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  position: relative;
}

.yr-ui-goodsbar__item:active {
  opacity: .5;
}

.yr-ui-goods__bar-left {
  flex: 1;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.yr-ui-goodsbar__flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.yr-ui-goodsbar__text {
  display: flex;
  font-size: 26rpx;
  /* line-height: 26rpx; */
  transform: scale(.7);
  transform-origin: center center;
}

.yr-ui-goods__bar-right {
  width: 450rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  padding-right: 8rpx;
}

.yr-ui-gb__right-width {
  width: 520rpx;
}

.yr-ui-gb__btn-box {
  flex: 1;
  padding-right: 12rpx;
  display: block;
  box-sizing: border-box;
}
.yr-ui-gb__icon-box{
  position: relative;
}

.yr-ui-goodsbar__fixed {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

/* 布局内容样式 end */