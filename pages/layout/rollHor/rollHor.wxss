page {
  font-weight: normal;
}

.yr-ui-align__center {
  flex-direction: row;
}

.yr-ui-btn__box{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 64rpx;
}

/*
  访问记录
*/
.yr-ui-card__wrap {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
}

.yr-ui-card__header {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
}

.yr-ui-scroll__view {
  flex-direction: row;
  overflow: hidden;
}


.yr-ui-cell__list {
  display: flex;
  flex-direction: row;
}

.yr-ui-list__item {
  width: 160rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
  padding: 0 16rpx 24rpx;
}