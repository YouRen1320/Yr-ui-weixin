<view class="yr-ui-wrap">
    <view class="yr-ui-page__hd">
			<view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">SubmitBar <image
					src="/static/images/index/light/icon_member_3x.png"></image>
			</view>
			<view class="yr-ui-page__desc">提交订单栏，常用的页面布局，可提升开发效率以及带来舒服的视觉效果！</view>
		</view>
		<view class="yr-ui-page__bd">
			<!-- 布局内容 start -->
			<view class="yr-ui-section__title">结算栏</view>
			<view class="yr-ui-submit__bar yr-ui-submitbar__flex yr-ui-submitbar__between">
				<view class="yr-ui-submit__bar-left yr-ui-submitbar__flex">
					<view class="yr-ui-submitbar__flex">
						<yr-ui-checkbox color="#FF2B2B" bindchange="change"></yr-ui-checkbox>
						<text class="yr-ui-submit__bar-text">全选</text>
					</view>
					<view class="yr-ui-submitbar__column">
						<view class="yr-ui-submitbar__flex">
							<text class="yr-ui-submit__bar-sign">合计:￥</text>
							<text class="yr-ui-submitbar__price">200.00</text>
						</view>
						<text class="yr-ui-submitbar__sub" wx:if="{{checkeAll}}">优惠减:￥2,130.00</text>
					</view>
				</view>
				<yr-ui-button type="danger" width="192rpx" height="72rpx" size="{{26}}" radius="60rpx" text="去结算(0)">
				</yr-ui-button>
			</view>

			<view class="yr-ui-section__title">提交订单栏</view>
			<view class="yr-ui-submit__bar yr-ui-submitbar__flex yr-ui-submitbar__between">
				<view class="yr-ui-submitbar__flex">
					<text class="yr-ui-submit__bar-sign">合计:</text>
					<text class="yr-ui-submit__bar-sign yr-ui-color__danger">￥</text>
					<text class="yr-ui-submitbar__price yr-ui-color__danger">200.00</text>
				</view>
				<yr-ui-button type="danger" width="192rpx" height="72rpx" size="{{26}}" radius="60rpx" text="提交订单">
				</yr-ui-button>
			</view>

			<view class="yr-ui-section__title">提交订单栏</view>
			<view class="yr-ui-submit__bar yr-ui-submitbar__flex yr-ui-submitbar__end">
				<view class="yr-ui-submitbar__flex yr-ui-submitbar__pr">
					<text class="yr-ui-submit__bar-sign">合计:</text>
					<text class="yr-ui-submit__bar-sign yr-ui-color__danger">￥</text>
					<text class="yr-ui-submitbar__price yr-ui-color__danger">200.00</text>
				</view>
				<yr-ui-button type="danger" width="192rpx" height="72rpx" size="{{26}}" radius="60rpx" text="提交订单" disabled>
				</yr-ui-button>
			</view>

			<view class="yr-ui-submitbar__fixed">
				<view class="yr-ui-submit__bar yr-ui-submitbar__flex yr-ui-submitbar__end">
					<view class="yr-ui-submitbar__flex yr-ui-submitbar__pr">
						<text class="yr-ui-submit__bar-sign">合计:</text>
						<text class="yr-ui-submit__bar-sign yr-ui-color__danger">￥</text>
						<text class="yr-ui-submitbar__price yr-ui-color__danger">200.00</text>
					</view>
					<yr-ui-button type="danger" width="192rpx" height="72rpx" size="{{26}}" radius="60rpx" text="提交订单">
					</yr-ui-button>
				</view>
				<yr-ui-safe-area></yr-ui-safe-area>
			</view>
			<!-- 布局内容 end -->
		</view>
	</view>