<view class="yr-ui-wrap">
    <view class="yr-ui-page__hd">
			<view class="yr-ui-page__title yr-ui-align__center" bindtap="vip">RollNews <image
					src="/static/images/index/light/icon_member_3x.png"></image>
			</view>
			<view class="yr-ui-page__desc">滚动消息，常用的页面布局，可提升开发效率以及带来舒服的视觉效果！</view>
		</view>
		<view class="yr-ui-page__bd yr-ui-page__spacing">
			<view class="yr-ui-section__title">搜索栏</view>
			<!-- 布局内容 start -->
			<view class="yr-ui-roll__news">
				<yr-ui-icon name="search" size="{{36}}"></yr-ui-icon>
				<swiper vertical autoplay circular interval="3000" class="yr-ui-rn__swiper">
					<swiper-item wx:for="{{searchList}}" wx:key="index" class="yr-ui-rn__item">
						<text class="yr-ui-rn__news-text">{{item}}</text>
					</swiper-item>
				</swiper>
			</view>

			<view class="yr-ui-section__title">搜索栏</view>
			<view class="yr-ui-roll__news yr-ui-rn__circle">
				<yr-ui-icon name="search" size="{{36}}" color="#fff"></yr-ui-icon>
				<swiper vertical autoplay circular interval="3000" class="yr-ui-rn__swiper">
					<swiper-item wx:for="{{searchList}}" wx:key="index" class="yr-ui-rn__item">
						<text class="yr-ui-rn__news-text yr-ui-rn__color-white">{{item}}</text>
					</swiper-item>
				</swiper>
				<yr-ui-icon name="scan" size="{{44}}" color="#fff"></yr-ui-icon>
			</view>

			<view class="yr-ui-section__title">消息栏</view>
			<view class="yr-ui-roll__news">
				<yr-ui-icon name="notice" size="{{36}}" color="#FFB703"></yr-ui-icon>
				<swiper vertical autoplay circular interval="3000" class="yr-ui-rn__swiper">
					<swiper-item wx:for="{{searchList}}" wx:key="index" class="yr-ui-rn__item">
						<text class="yr-ui-rn__news-text">{{item}}</text>
					</swiper-item>
				</swiper>
			</view>
			<!-- 布局内容 end -->
		</view>
		<view class="yr-ui-btn__box">
			<yr-ui-button type="gray" width="400rpx" height="84rpx" text="More" bold margin="24rpx" bindclick="href">
			</yr-ui-button>
		</view>
	</view>