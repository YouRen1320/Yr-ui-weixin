page {
  font-weight: normal;
}

.yr-ui-section__title {
  margin-left: 32rpx;
}

/* 布局内容样式 start */
.yr-ui-chatbar__wrap {
  width: 100%;
  display: flex;
  padding: 6px 0;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
  background: #f8f8f8;
}

.yr-ui-chatbar__input-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex: 1;
  position: relative;
}

.yr-ui-chatbar__input {
  width: 100%;
  box-sizing: content-box;
  padding: 20rpx;
  flex: 1;
  border-radius: 8rpx;
  font-size: 32rpx;
  background: #fff;
}

.yr-ui-chatbar__voice {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #fff;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  z-index: 10;
  align-items: center;
  justify-content: center;
}

.yr-ui-chatbar__voice:active {
  opacity: .5;
}

.yr-ui-chatbar__voice-text {
  text-align: center;
  font-weight: bold;
  font-size: 32rpx;
}

.yr-ui-chatbar__icon-box {
  height: 72rpx;
  padding: 0 16rpx;
  display: flex;
  flex-shrink: 0;
  align-items: center;
  justify-content: center;
}

.yr-ui-chatbar__icon-box:active {
  opacity: .5;
}

.yr-ui-chatbar__pdl {
  padding-left: 0;
}
.yr-ui-chatbar__send-box{
  padding: 0 30rpx;
}
.yr-ui-chatbar__send {
  color: #465CFF;
  font-size: 30rpx;
}
.yr-ui-chatbar__fixed {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

/* 布局内容样式 end */