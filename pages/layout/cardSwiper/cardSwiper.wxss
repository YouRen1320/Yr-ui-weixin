page {
  font-weight: normal;
}

.yr-ui-wrap {
  padding-bottom: 64rpx;
}

.yr-ui-section__title {
  margin-left: 32rpx;
}

.yr-ui-btn__box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

/* 布局内容样式 start */

.yr-ui-card__swiper {
  width: 100%;
  height: 320rpx;
}

.yr-ui-cardswiper__box {
  width: 100%;
  display: flex;
  height: 320rpx;
  flex-direction: row;
  justify-content: center;
}

.yr-ui-card__swiper-wrap {
  width: 640rpx;
  height: 320rpx;
}

.yr-ui-cs__swiper-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.yr-ui-cardswiper__item {
  width: 640rpx;
  display: flex;
  transition: transform .1s linear;
  height: 320rpx;
  background: #f8f8f8;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  overflow: hidden;
}

.yr-ui-cardswiper__img {
  width: 640rpx;
  height: 320rpx;
  display: block;
  border-radius: 24rpx;
}

.yr-ui-cardswiper__scale {
  transform: scale3d(.9, .9, 1);
}

/* 布局内容样式 end */