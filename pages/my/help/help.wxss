page {
  font-weight: normal;
}

.yr-ui-header {
  width: 100%;
  height: 338rpx;
  position: relative;
  background: #465CFF;
}

.yr-ui-banner {
  width: 100%;
  height: 336rpx;
  display: block;
}

.yr-ui-hd__content {
  width: 100%;
  height: 216rpx;
  position: absolute;
  z-index: 2;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  color: #FFFFFF;
  padding-left: 64rpx;
  box-sizing: border-box;
}

.yr-ui-hd__title {
  font-size: 36rpx;
  font-weight: 600;
}

.yr-ui-hd__sub {
  font-size: 28rpx;
  font-weight: 400;
  padding-top: 24rpx;
}

.yr-ui-page__bd {
  margin-top: -120rpx;
  position: relative;
  z-index: 2;
}

.yr-ui-page__bd text {
  font-size: 28rpx;
  line-height: 48rpx;
}

.yr-ui-main__box {
  width: 100%;
  background-color: #fff;
  border-radius: 48rpx 48rpx 0 0;
  padding: 32rpx 32rpx 0 32rpx;
  box-sizing: border-box;
}

.yr-ui-search__box {
  width: 100%;
  height: 88rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

.yr-ui-search__icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.yr-ui-search__text {
  font-size: 28rpx;
  color: #CCCCCC;
  padding-left: 16rpx;
}

.yr-ui-title {
  font-size: 32rpx !important;
  font-weight: 500;
}

.yr-ui-menu__box {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 48rpx 0;
}

.yr-ui-menu__item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.yr-ui-menu__item image {
  width: 64rpx;
  height: 64rpx;
}

.yr-ui-menu__item text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  padding-top: 12rpx;
}

.yr-ui-title__box {
  padding: 32rpx;
  box-sizing: border-box;
}

.yr-ui-title__box image {
  width: 64rpx;
  height: 64rpx;
}

.yr-ui-title__box text {
  font-size: 28rpx;
  font-weight: 500;
  padding-left: 16rpx;
}

.yr-ui-footer {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  padding-top: 32rpx;
}

.yr-ui-ft__text {
  position: relative;
  font-size: 24rpx;
  color: #465CFF;
}