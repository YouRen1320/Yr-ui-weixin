.yr-ui-wrap {
  width: 100%;
  padding: 0 64rpx 64rpx;
  box-sizing: border-box;
}

.yr-ui-bg__box {
  width: 100%;
  position: relative;
}

.yr-ui-share__bg {
  width: 100%;
  height: 466rpx;
  display: block;
  margin-top: 112rpx;
}

.yr-ui-logo__box {
  width: 100%;
  position: absolute;
  top: 48rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.yr-ui-logo {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
}

.yr-ui-text {
  font-size: 28rpx;
  padding-top: 16rpx;
}

.yr-ui-qrcode__box {
  width: 512rpx;
  height: 512rpx;
  padding: 56rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0 20rpx 20rpx 0 rgba(9, 41, 134, 0.12);
  border-radius: 48rpx;
  margin: -88rpx auto 0;
  position: relative;
  z-index: 10;
}

.yr-ui-qrcode {
  width: 100%;
  height: 400rpx;
}

.yr-ui-btn__box {
  width: 100%;
}

.yr-ui-share__ic {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.yr-ui-ani__box {
  width: 600rpx;
  border-radius: 24rpx;
}

.yr-ui-poster__img {
  width: 100%;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  display: block;
}