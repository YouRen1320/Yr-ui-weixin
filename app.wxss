@import './components/yr-ui/yr-ui-theme/yr-ui-theme.wxss';
/* 自定义扩展图标 */
@import './static/icon/yr-ui-custom-icon.wxss';
page {
	background-color: var(--yr-ui-bg-color-grey,#F1F4FA);
	font-size: 32rpx;
	font-weight: 500;
	color: var(--yr-ui-color-title,#181818);
	font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.yr-ui-page__hd {
	width: 100%;
	padding: 52rpx 32rpx;
	box-sizing: border-box;
}

.yr-ui-page__bd {
	width: 100%;
	padding-bottom: 64rpx;
}


.yr-ui-page__title {
	text-align: left;
	font-size: 36rpx;
	font-weight: 600;
}

.yr-ui-page__desc {
	margin-top: 8rpx;
	color: #B2B2B2;
	text-align: left;
	font-size: 28rpx;
	font-weight: 400;
	word-break: break-all;
}

.yr-ui-page__spacing {
	padding-left: 32rpx;
	padding-right: 32rpx;
	box-sizing: border-box;
}

.yr-ui-section__title {
	font-size: 32rpx;
	line-height: 32rpx;
	font-weight: 600;
	margin-bottom: 32rpx;
	padding-left: 16rpx;
	position: relative;
	box-sizing: border-box;
}

.yr-ui-section__title:not(:first-child) {
	margin-top: 96rpx;
}

.yr-ui-page__title image {
	width: 48rpx;
	height: 48rpx;
	margin-left: 16rpx;
}

.yr-ui-vip__icon {
	width: 48rpx;
	height: 48rpx;
	margin-left: 16rpx;
}

.yr-ui-section__title::after {
	content: '';
	position: absolute;
	width: 2px;
	height: 100%;
	background: #465CFF;
	border-radius: 2px;
	left: 0;
	top: 0;
}
.yr-ui-color__primary{
	color: #465CFF;
}

::-webkit-scrollbar {
	width: 0 !important;
	height: 0 !important;
	color: transparent !important;
	display: none;
}

.yr-ui-wrap {
	width: 100%;
	display: flex;
	box-sizing: border-box;
	flex-direction: column;
}

.yr-ui-ellipsis {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.yr-ui-flex {
	display: flex;
}

.yr-ui-flex__1 {
	flex: 1
}

.yr-ui-flex__column {
	flex-direction: column;
}

.yr-ui-flex__center {
	display: flex;
	align-items: center;
	justify-content: center;
}

.yr-ui-flex__between {
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.yr-ui-flex__reverse {
	flex-direction: row-reverse;
}

.yr-ui-align__center {
	display: flex;
	align-items: center;
}